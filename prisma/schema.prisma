generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum Category {
  Games
  Entertainment
  Productivity
}

enum OrderStatus {
  Pending
  Processing
  Complete
  Cancelled
}

model User {
  id           Int      @id @default(autoincrement())
  name         String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
  orders       Order[]
}

model Product {
  id          Int                 @id @default(autoincrement())
  name        String
  slug        String              @unique
  category    Category
  description String
  iconUrl     String
  active      Boolean             @default(true)
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt
  offers      Offer[]
  orders      Order[]
  orderFields ProductOrderField[]
}

model Offer {
  id        Int      @id @default(autoincrement())
  productId Int
  title     String
  priceNpr  Int
  note      String?
  active    Boolean  @default(true)
  sortOrder Int      @default(0)
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  orders    Order[]
}

model ProductOrderField {
  id        Int      @id @default(autoincrement())
  productId Int
  label     String
  fieldType String
  required  Boolean  @default(false)
  sortOrder Int      @default(0)
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  values    OrderFieldValue[]
}

model Order {
  id          Int               @id @default(autoincrement())
  userId      Int
  productId   Int
  offerId     Int
  status      OrderStatus       @default(Pending)
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  user        User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  product     Product           @relation(fields: [productId], references: [id], onDelete: Cascade)
  offer       Offer             @relation(fields: [offerId], references: [id], onDelete: Cascade)
  fieldValues OrderFieldValue[]
}

model OrderFieldValue {
  id      Int               @id @default(autoincrement())
  orderId Int
  fieldId Int
  value   String
  order   Order             @relation(fields: [orderId], references: [id], onDelete: Cascade)
  field   ProductOrderField @relation(fields: [fieldId], references: [id], onDelete: Cascade)
}
